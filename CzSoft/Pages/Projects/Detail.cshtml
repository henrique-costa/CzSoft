@page "{projectId:int}"
@model CzSoft.Pages.Projects.DetailModel
@{
    ViewData["Title"] = "Detail";
}
@if (Model.Message != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Aviso!</strong> @Model.Message
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2>Detalhes: @Model.Project.Name</h2>
            <div class="form-group">
                <label asp-for="Project.Id"></label>:
                @Model.Project.Id
            </div>

            <div class="form-group">
                <label asp-for="Project.Name"></label>:
                <p>@Model.Project.Name</p>
            </div>

            <div class="form-group">
                <label asp-for="Project.Description"></label>:
                <p>@Model.Project.Description</p>
            </div>

            <div class="form-group">
                <label asp-for="Project.Type"></label>:
                <p>@Model.Project.Type</p>
            </div>

            <div class="form-group">
                <label asp-for="Project.CreationDate"></label>:
                <p>@Model.Project.CreationDate</p>
            </div>

        </div>
    </div>
    <a asp-page="./List" class="btn btn-primary">Todos os Projetos</a>
    <a class="btn btn-warning" asp-page="./Edit" asp-route-projectId="@Model.Project.Id">Editar</a>
</div>

<script>
    $('.alert').alert()
</script>



